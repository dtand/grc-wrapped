daemon off;
# Heroku dynos already run in foreground

# Defines the number of worker processes.
worker_processes 1;

# Defines the current working directory.
working_directory /app;

error_log stderr;
pid nginx.pid;

events {
  use epoll;
  accept_mutex on;
  worker_connections 1024;
}

http {
  gzip on;
  gzip_comp_level 2;
  gzip_min_length 512;

  server_tokens off;

  log_format l2met 'measure#nginx.service=$request_time request_id=$http_x_request_id';
  access_log /dev/stdout l2met;
  error_log stderr;

  include mime.types;
  default_type application/octet-stream;
  sendfile on;

  # Must read the body in 5 seconds.
  client_body_timeout 5;

  server {
    listen <%= ENV["PORT"] %>;
    server_name _;
    keepalive_timeout 5;
    root /app/dist;

    location / {
      try_files $uri $uri/ /index.html;
    }
  }
}
